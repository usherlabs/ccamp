{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"target": "es2019",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"removeComments": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "**node_modules**"],
	"include": ["./typechain-types"]
}
